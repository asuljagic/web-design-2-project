  <script>
    const form = document.querySelector('form');
    const username = document.querySelector('#username');
    const password = document.querySelector('#password');
    const display = document.querySelector('.error');
    const rmCheck = document.getElementById("rememberMe");
    const emailInput = document.getElementById("username");

 
 if (localStorage.chkbx && localStorage.chkbx != '') {
     $('#rememberMe').attr('checked', 'checked');
     $('#username').val(localStorage.usrname);
     $('#password').val(localStorage.pass);
 } else {
     $('#rememberMe').removeAttr('checked');
     $('#username').val('');
     $('#password').val('');
 }



   form.addEventListener('submit', async (e) => {
      e.preventDefault()
      
      var textContent = ''
      try {
        const res = await fetch('/api/auth/login', {
          method: 'POST',
          body: JSON.stringify({ username: username.value, password: password.value }),
          headers: { 'Content-Type': 'application/json' }
        })
        const data = await res.json()
        if (res.status === 400 || res.status === 401) {
          return alert(textContent = `${data.message}. ${data.error ? data.error : ''}`)
        }
        //Remember me dio
        if ($('#rememberMe').is(':checked')) {
         // save username and password
         localStorage.usrname = $('#username').val();
         localStorage.pass = $('#password').val();
         localStorage.chkbx = $('#rememberMe').val();
        } else {
         localStorage.usrname = '';
         localStorage.pass = '';
         localStorage.chkbx = '';
        }
        localStorage.setItem('val', username.value);

        //alert("Dobro došli " + username.value);
        data.role === "admin" ? location.assign('/admin') : location.assign('/basic')
       // alert('Pozdrav ' + username.value);
      } catch (err) {
        console.log(err.message)
      }

    })


